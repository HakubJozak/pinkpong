<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :winner_id %>*<br />
    <%= f.select :winner_id, @users.collect { |u| [u.email, u.id] } %>
  </div>
  <div class="field">
    If the winner is not in the list, enter her/his email
    <%= text_field_tag :winner_email %>
  </div>

  <div class="field">
    <%= f.label :loser_id %>*<br />
    <%= f.select :loser_id, @users.collect { |u| [u.email, u.id] } %>
  </div>
  <div class="field">
    If the loser is not in the list, enter her/his email
    <%= text_field_tag :loser_email %>
  </div>

  <div class="field">
    <%= f.label :score %><br />
    <%= f.text_field :score %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
