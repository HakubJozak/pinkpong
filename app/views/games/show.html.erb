<p id="notice"><%= notice %></p>

<p>
  <b>Winner:</b>
  <%= @game.winner.email %>
</p>

<% if @game.double? %>
<p>
  <b>Winner:</b>
  <%= @game.winner_double.email %>
</p>
<% end %>

<p>
  <b>Loser:</b>
  <%= @game.loser.email %>
</p>

<% if @game.double? %>
<p>
  <b>Loser:</b>
  <%= @game.loser_double.email %>
</p>
<% end %>

<% if @game.score.present? %>
<p>
  <b>Score:</b>
  <%= @game.score %>
</p>
<% end %>

<% if @game.description.present? %>
<p>
  <b>Description:</b>
  <%= @game.description %>
</p>
<% end %>

